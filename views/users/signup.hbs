{{>errors}}

<div class="col-md-4 mx-auto" style="max-width: 400px;
  height: 320px; font-size: 20px ">
    <div class="card">
        <div class="card-header">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-ninja"></i>Register
            </h1>
        </div>
        <div class="card-body">
            <form action="/signupuser" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Enter your name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Enter your email"
                        value="{{email}}">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Create a password"
                        value="{{password}}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password"
                        value="{{confirm_password}}">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Register
                </button>

            </form>
            <p class="lead mt-4">Have An Account? <a href="/signin">Login</a></p>
        </div>
    </div>
</div>